rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Vector Search関連のコレクション - サーバーサイドからのアクセスを許可
    match /vector_embeddings/{document=**} {
      // 読み取りは全て許可（検索のため）
      allow read: if true;
      // 書き込みはサーバー側のAdmin SDKのみ（クライアントからの書き込みは不可）
      allow write: if false;
    }
    
    match /reranking_feedback/{document=**} {
      // 読み取りは全て許可（分析のため）
      allow read: if true;
      // 書き込みはサーバー側のAdmin SDKのみ（クライアントからの書き込みは不可）
      allow write: if false;
    }
    
    // ペット関連のコレクション
    match /pets/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /foundPets/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // マッチング関連
    match /matches/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // チャット関連 - ゲストユーザーも読み取り可能に
    match /chatRooms/{roomId}/{document=**} {
      allow read: if true;  // 誰でも読み取り可能（ゲストユーザー対応）
      allow write: if request.auth != null;
    }
    
    // エージェント活動ログ - ゲストユーザーも読み取り可能に
    match /agentActivities/{document=**} {
      allow read: if true;  // 誰でも読み取り可能（ゲストユーザー対応）
      allow write: if request.auth != null;
    }
    
    // システムアラート - ゲストユーザーも読み取り可能に
    match /systemAlerts/{document=**} {
      allow read: if true;  // 誰でも読み取り可能（ゲストユーザー対応）
      allow write: if request.auth != null;
    }
    
    // ユーザー固有のデータ
    match /users/{userId}/{document=**} {
      allow read: if true;  // 誰でも読み取り可能（ゲストユーザー対応）
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // その他のコレクション（デフォルト）
    match /{document=**} {
      allow read: if true;  // 誰でも読み取り可能（ゲストユーザー対応）
      allow write: if request.auth != null;
    }
  }
}