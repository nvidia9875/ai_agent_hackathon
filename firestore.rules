rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Vector Search関連のコレクション - サーバーサイドからのアクセスを許可
    match /vector_embeddings/{document=**} {
      // 読み取りは全て許可（検索のため）
      allow read: if true;
      // 書き込みはサーバー側のAdmin SDKのみ（クライアントからの書き込みは不可）
      allow write: if false;
    }
    
    match /reranking_feedback/{document=**} {
      // 読み取りは全て許可（分析のため）
      allow read: if true;
      // 書き込みはサーバー側のAdmin SDKのみ（クライアントからの書き込みは不可）
      allow write: if false;
    }
    
    // ペット関連のコレクション
    match /pets/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // その他のコレクション
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}