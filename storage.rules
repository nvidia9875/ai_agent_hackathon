rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // ペット画像のアップロードを許可
    match /pets/{userId}/{allPaths=**} {
      allow read: if true;  // 誰でも読み取り可能（ペットを探すため）
      allow write: if request.auth != null && request.auth.uid == userId;  // 認証済みユーザーが自分のフォルダにのみ書き込み可能
    }
    
    // その他のファイルのデフォルトルール
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}