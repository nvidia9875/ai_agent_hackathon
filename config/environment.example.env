# ===================================
# PawMate AI Agent System Configuration
# Google Cloud AI Agent Hackathon
# ===================================

# Google Cloud Project Configuration
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_REGION=us-central1

# Authentication
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# ===================================
# Visual Detective Agent Configuration
# ===================================

# Vision AI API
VISION_AI_ENDPOINT=https://vision.googleapis.com/v1
VISION_AI_API_KEY=your-vision-ai-api-key

# Vertex AI Configuration (using service account authentication)
VERTEX_AI_ENDPOINT=https://us-central1-aiplatform.googleapis.com
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL_ID=gemini-2.0-flash-002

# Vector Search (removed - using direct Vision AI matching instead)

# Imagen API
IMAGEN_ENDPOINT=https://us-central1-aiplatform.googleapis.com

# Cloud Storage
CLOUD_STORAGE_BUCKET=your-storage-bucket-name

# ===================================
# Behavior Predictor Agent Configuration
# ===================================

# Google Maps APIs
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_PLACES_API_KEY=your-google-places-api-key
GOOGLE_ELEVATION_API_KEY=your-google-elevation-api-key

# Weather API
WEATHER_API_KEY=your-openweather-api-key
WEATHER_API_ENDPOINT=https://api.openweathermap.org/data/2.5

# ===================================
# Search Coordinator Agent Configuration
# ===================================

# ADK (Agents Development Kit)
ADK_ENDPOINT=https://adk.googleapis.com/v1

# Pub/Sub Configuration
PUBSUB_PROJECT_ID=your-project-id
PUBSUB_VISUAL_DETECTIVE_TOPIC=visual-detective-tasks
PUBSUB_BEHAVIOR_PREDICTOR_TOPIC=behavior-predictor-tasks
PUBSUB_COORDINATION_TOPIC=coordination-results

# Firestore Configuration
FIRESTORE_PROJECT_ID=your-project-id
FIRESTORE_DATABASE=(default)

# ===================================
# Application Configuration
# ===================================

# Next.js Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# Node.js Environment
NODE_ENV=development
PORT=3000

# ===================================
# Monitoring and Logging
# ===================================

# Cloud Logging
GOOGLE_CLOUD_LOGGING_ENABLED=true
LOG_LEVEL=info

# Cloud Monitoring
GOOGLE_CLOUD_MONITORING_ENABLED=true
METRICS_COLLECTION_INTERVAL=60

# Error Reporting
GOOGLE_CLOUD_ERROR_REPORTING_ENABLED=true

# ===================================
# Security Configuration
# ===================================

# API Security
API_KEY_SECRET=your-api-key-secret
JWT_SECRET=your-jwt-secret

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=10

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ===================================
# Performance Configuration
# ===================================

# Agent Performance Limits
MAX_CONCURRENT_TASKS_VISUAL=5
MAX_CONCURRENT_TASKS_BEHAVIOR=3
MAX_CONCURRENT_TASKS_COORDINATOR=5

# Timeout Configuration
DEFAULT_TASK_TIMEOUT_SECONDS=300
HTTP_REQUEST_TIMEOUT_SECONDS=30

# Memory Limits (MB)
MAX_MEMORY_VISUAL_DETECTIVE=512
MAX_MEMORY_BEHAVIOR_PREDICTOR=256
MAX_MEMORY_SEARCH_COORDINATOR=512

# ===================================
# Development Configuration
# ===================================

# Debug Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_PERFORMANCE_PROFILING=false

# Mock Services (for development/testing)
USE_MOCK_VISION_AI=false
USE_MOCK_VERTEX_AI=false
USE_MOCK_WEATHER_API=false

# Test Configuration
TEST_PET_IMAGE_URL=https://example.com/test-pet.jpg
TEST_COORDINATES_LAT=37.7749
TEST_COORDINATES_LNG=-122.4194

# ===================================
# Optional: Third-party Integrations
# ===================================

# Slack Integration (for notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
SLACK_CHANNEL=#pet-search-alerts

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Twilio (for SMS notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ===================================
# Advanced Configuration
# ===================================

# Database Connection Pool
DB_MAX_CONNECTIONS=20
DB_CONNECTION_TIMEOUT_MS=10000

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600

# File Upload Limits
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# ===================================
# Deployment Configuration
# ===================================

# Cloud Run Configuration (for production)
CLOUD_RUN_SERVICE_ACCOUNT=your-service-account@your-project.iam.gserviceaccount.com
CLOUD_RUN_MEMORY_LIMIT=2Gi
CLOUD_RUN_CPU_LIMIT=1000m
CLOUD_RUN_MAX_INSTANCES=10

# Load Balancer Configuration
LOAD_BALANCER_HEALTH_CHECK_PATH=/api/agents/health
LOAD_BALANCER_TIMEOUT_SECONDS=30